{
  "name": "finnegans-chatbots-api",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && tsc -p tsconfig.json",
    "dev": "tsx watch --clear-screen=false index.ts",
    "start": "node dist/index.js",
    "start:dev": "tsx watch index.ts",
    "typecheck": "tsc --noEmit",
    "postinstall": "prisma generate"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@prisma/client": "^6.17.0",
    "express": "^5.1.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/express": "^5.0.2",
    "@types/node": "^24.7.0",
    "prisma": "^6.1.0",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3"
  },
  "prisma": {
    "schema": "./prisma/schema.prisma"
  }
}
